{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"target": "ES2021",
		"lib": [
			"ES2021.String"
		],
		"module": "CommonJS",
		"resolveJsonModule": true,
		"declaration": true,
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"types": ["node"],
		"outDir": "./dist"
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./node_modules", "./**/__tests__/*"]
}
